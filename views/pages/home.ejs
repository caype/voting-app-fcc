<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Voting App by Free Code Camp</title>
    <%- include ../partials/styles.ejs %>
</head>

<body>

  <%- include ../partials/header.ejs %>

  <main>

    <div class="container-fluid">
      <div class="jumbotron">
          <h1 class="text-center">Voting App!</h1>
          <h3 class="text-center"><a href="/create">CREATE </a>a poll or <a href="/polls">VOTE</a> for an existing poll</h3>
      </div>
    </div>

    <div class="container-fluid" id="listOfPolls">
      <h3 class="text-center">Loading the list of Polls</h3>

    </div>

  </main>

  <%- include ../partials/scripts.ejs %>
  <script type="text/javascript">
    $(document).ready(function(){
      $.ajax({
        url:'/allPolls',
        type:'GET',
        success:function(val){
          console.log(val);
          loadPolls(val);
        },
        error:function(val){
          console.log("error =>"+val);
        }
      })
    })
  </script>
</body>

</html>
